
@{
    ViewData["Title"] = "addmodel";
}

<h2>addmodel</h2>

@model Turbo.ViewModel.StaticDbData
<h4 style="margin-bottom:50px;">Elave edeceyiniz model markasini mueyyenlesdirib model adini elave edin.</h4>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly">

                </div>
                <div class="col-8">
                    <input asp-for="MarkaId" type="hidden" />
                    <div class="form-group">
                        <label>Marka</label>
                        <select id="markam" class="form-control" asp-items="@(new SelectList(ViewBag.Markalar, "Id", "Name"))">
                            <option>Marka secin</option>
                        </select>

                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Ad daxil edin">
                        <span asp-validation-for="Name"></span>
                    </div>
                </div>

                <div class="col-12"><input class="btn btn-primary" type="submit" value="Yarat" /></div>

            </form>
        </div>
    </div>
</div>

@section Scripts{

    <script>


        $("#markam").change(function () {
            let markaId = $(this).val();
            $("#MarkaId").val(markaId);
            
        })

    
    </script>
    <partial name="_ValidationScriptsPartial" />
}