}




@model Turbo.ViewModel.SignIn

<div class="container">
    <div class="row">
        <div style="margin-bottom:50px" class="col-6">
            <h4>Bir Hesabin Yoxdur??? indi <a asp-controller="Account" asp-action="SignUp">Qeyd ol</a></h4>
            <form class="mt-5" method="post">
